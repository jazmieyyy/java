/* PROGRAM 10
Write java program to find the sum of the digits and reverse of a given number using class and 
objects */

import java.util.Scanner;
class Operations {
    int a, m = 0, sum = 0;
    void sum(int num) {
        do {
            a = num % 10;
            sum = sum + a;
            num = num / 10;
          } 
        while (num > 0);
        System.out.println("Sum of digits = " + sum);
    }
    void reverse(int num) {
        do {
            a = num % 10;
            m = m * 10 + a;
            num = num / 10;
         } 
        while (num > 0);
        System.out.println("Reverse : " + m);
    }
}
class SumandReverse {
    public static void main(String[] args) {
        int n;
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter any number : ");
        n = sc.nextInt();
        Operations obj = new Operations();
        obj.sum(n);
        obj.reverse(n);
    }
}
